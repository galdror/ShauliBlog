@model IEnumerable<ShauliBlog.Models.Objects.PostCommentBriefObject>

@{
    ViewBag.Title = "Brief";
}

<h2>Brief Of Blog</h2>

<table class="table" border="1">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PostTitle)
        </th>
        <th>
            Comments
        </th>
        <th></th>
    </tr>

        @foreach (var item in Model)
        {
            <tr>
                <th rowspan="@(item.Comments.Count()+1)">
                    @Html.DisplayFor(modelItem => item.PostTitle)
                </th>
            </tr>

            foreach (var com in item.Comments)
            {
                <tr>
                    <td>@com.Title</td>
                </tr>
            }
        }

</table>

<div>
    @Html.ActionLink("Back to Queries", "Index", "Queries")
</div>

