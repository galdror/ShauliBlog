@model IEnumerable<ShauliBlog.Models.Fan>

@{
    ViewBag.Title = "Index";
}

<h2>Fun Club Info</h2>
 
@using (Html.BeginForm(FormMethod.Post))
{
    <p>
        First Name: @Html.TextBox("searchFirstName")
        <br />
        Last Name: @Html.TextBox("searchLastName")
        <br />
        <div class="col-md-10">
            Sex: 
            @Html.RadioButton("gender", "Both", true) Both
            @Html.RadioButton("gender", "Male") Male
            @Html.RadioButton("gender", "Female") Female
        </div>
        <br />
        <input type="submit" value="Filter" />
    </p>
}

<table class="table" border="1">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SexType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Seniority)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SexType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seniority)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.ID })

                <!-- Manager Mode-->
                @if (Session["Name"] != null)
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                    <span></span>
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                }
            </td>
        </tr>
    }

</table>
@if (Session["Name"] != null)
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}