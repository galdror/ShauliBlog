@model IEnumerable<ShauliBlog.Models.Objects.CommentPostObject>
@{
    ViewBag.Title = "Search Comments of Author";
}

<h2>Search Comments of Author</h2>

@using (Html.BeginForm(FormMethod.Post))
{
<p>
    Comment Author: @Html.TextBox("searchAuthor")
    <br />
    <input type="submit" value="Find" />
</p>
}


<table class="table" border="1">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CommentTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostTitle)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CommentTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostTitle)
            </td>
        </tr>
    }

</table>
<div>
    @Html.ActionLink("Back to Queries", "Index", "Queries")
</div>

